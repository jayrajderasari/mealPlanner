{
  "version": 2,
  "builds": [
    {
      "src": "mealPlannerBackend/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "mealPlannerFrontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "mealPlannerBackend/app.py"
    },
    {
      "src": "/(.*\\.(?:js|css|ico|png|jpg|jpeg|gif|svg))",
      "dest": "mealPlannerFrontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "mealPlannerFrontend/index.html"
    }
  ]
}
