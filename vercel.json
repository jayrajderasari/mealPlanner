{
  "version": 2,
  "builds": [
    {
      "src": "mealPlannerBackend/app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "mealPlannerBackend/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "mealPlannerFrontend/$1"
    }
  ]
}
